<UserControl x:Class="Sistema_SocioTorcedor.EditarCategoria"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistema_SocioTorcedor"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" IsVisibleChanged="EditarCategoriaIsVisibleChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   Text="CONSULTA DE CATEGORIAS"
                   HorizontalAlignment="Center"
                   FontSize="22" 
                   Foreground="#4461C2"/>

        <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="200" Name="DgdCategorias" IsReadOnly="True"
                  SelectedCellsChanged="DgdCategoriasSelectedCellsChanged" SelectionMode="Single" Foreground="#0E1428"/>

        <TextBlock Grid.Row="2" 
                   Grid.Column="1" 
                   Text="EDIÇÃO DE CATEGORIAS"
                   HorizontalAlignment="Center"
                   FontSize="22" 
                   Foreground="#4461C2"/>

        <Label Content="Nome" Grid.Row="3" Grid.Column="0" Foreground="#4461C2" FontSize="20"/>
        <Label Content="Preço" Grid.Row="4" Grid.Column="0" Foreground="#4461C2" FontSize="20"/>
        <Label Content="Benefícios" Grid.Row="5" Grid.Column="0" Foreground="#4461C2" FontSize="20"/>

        <TextBox Grid.Row="3" 
                 Grid.Column="1" 
                 Name="TxtNome"
                 Background="#fff"
                 Foreground="#0E1428"
                 FontSize="20" 
                 BorderBrush="#4461C2"
                 BorderThickness="2"/>
        <TextBox Grid.Row="4" 
                 Grid.Column="1" 
                 Name="TxtPreco"
                 Background="#fff"
                 Foreground="#0E1428"
                 FontSize="20" 
                 BorderBrush="#4461C2"
                 BorderThickness="2"/>
        <TextBox Grid.Row="5" 
                 Grid.Column="1" 
                 Name="TxtBeneficios"
                 Background="#fff"
                 Foreground="#0E1428"
                 FontSize="20" 
                 BorderBrush="#4461C2"
                 BorderThickness="2"/>

        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="Alterar"
                    Width="150" 
                    Height="40"
                    Background="#4461C2" 
                    Foreground="#fff"
                    FontSize="20" 
                    BorderBrush="#fff" 
                    BorderThickness="2"
                    Click="AlterarClick"/>
            <Button Content="Remover"
                    Width="150" 
                    Height="40"
                    Background="#4461C2" 
                    Foreground="#fff"
                    FontSize="20" 
                    BorderBrush="#fff" 
                    BorderThickness="2"
                    Click="RemoverClick"/>
        </StackPanel>
    </Grid>
</UserControl>
